@page
@model EnrollmentSystem.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Driving School Enrollment</h3>
                    <h5 class="text-center text-muted mb-4">Sign In</h5>

                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="Enter email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label"></label>
                            <input asp-for="Input.Password" class="form-control" placeholder="Enter password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label"></label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <p class="mb-0">Don't have an account? <a asp-page="./Register">Register here</a></p>
                    </div>
                </div>
            </div>

            <div class="mt-3 p-3 bg-light rounded">
                <h6 class="text-muted">Demo Accounts:</h6>
                <small class="d-block">Admin: admin@drivingschool.com / Admin@123</small>
                <small class="d-block">Librarian: librarian@drivingschool.com / Librarian@123</small>
                <small class="d-block">Student: student@drivingschool.com / Student@123</small>
                <small class="d-block">Guardian: guardian@drivingschool.com / Guardian@123</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
