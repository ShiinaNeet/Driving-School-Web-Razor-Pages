@page
@model EnrollmentSystem.Pages.Admin.Locations.CreateModel
@{
    ViewData["Title"] = "Add Location";
}

<h2><i class="bi bi-plus-circle me-2"></i>Add Location</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Location.Name" class="form-label"></label>
                        <input asp-for="Location.Name" class="form-control" />
                        <span asp-validation-for="Location.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Location.Address" class="form-label"></label>
                        <input asp-for="Location.Address" class="form-control" />
                        <span asp-validation-for="Location.Address" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="Location.City" class="form-label"></label>
                            <input asp-for="Location.City" class="form-control" />
                            <span asp-validation-for="Location.City" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Location.State" class="form-label"></label>
                            <input asp-for="Location.State" class="form-control" />
                            <span asp-validation-for="Location.State" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Location.ZipCode" class="form-label"></label>
                            <input asp-for="Location.ZipCode" class="form-control" />
                            <span asp-validation-for="Location.ZipCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Location.PhoneNumber" class="form-label"></label>
                            <input asp-for="Location.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Location.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Location.Email" class="form-label"></label>
                            <input asp-for="Location.Email" class="form-control" type="email" />
                            <span asp-validation-for="Location.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Location.Notes" class="form-label"></label>
                        <textarea asp-for="Location.Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Location.Notes" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Location.IsActive" class="form-check-input" type="checkbox" checked />
                        <label asp-for="Location.IsActive" class="form-check-label"></label>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Location.IsHeadquarters" class="form-check-input" type="checkbox" />
                        <label asp-for="Location.IsHeadquarters" class="form-check-label"></label>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Create Location</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
