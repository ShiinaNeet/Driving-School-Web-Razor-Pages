@page
@model EnrollmentSystem.Pages.Admin.Locations.IndexModel
@{
    ViewData["Title"] = "Locations";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-geo-alt-fill me-2"></i>Locations</h2>
    <a asp-page="./Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Add Location
    </a>
</div>

<div class="row">
    @foreach (var location in Model.Locations)
    {
        <div class="col-md-6 mb-3">
            <div class="card @(location.IsHeadquarters ? "border-primary" : "")">
                <div class="card-body">
                    <h5 class="card-title">
                        @location.Name
                        @if (location.IsHeadquarters)
                        {
                            <span class="badge bg-primary">Headquarters</span>
                        }
                        @if (!location.IsActive)
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </h5>
                    @if (!string.IsNullOrEmpty(location.Address))
                    {
                        <p class="card-text">
                            <i class="bi bi-pin-map me-1"></i>@location.Address<br />
                            @location.City, @location.State @location.ZipCode
                        </p>
                    }
                    @if (!string.IsNullOrEmpty(location.PhoneNumber))
                    {
                        <p class="card-text"><i class="bi bi-telephone me-1"></i>@location.PhoneNumber</p>
                    }
                    @if (!string.IsNullOrEmpty(location.Email))
                    {
                        <p class="card-text"><i class="bi bi-envelope me-1"></i>@location.Email</p>
                    }
                    <div class="row mt-3">
                        <div class="col-6">
                            <small class="text-muted">Vehicles: @location.Vehicles.Count</small>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Instructors: @location.Professors.Count</small>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-page="./Edit" asp-route-id="@location.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@location.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
