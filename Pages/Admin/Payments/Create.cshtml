@page
@model EnrollmentSystem.Pages.Admin.Payments.CreateModel
@{
    ViewData["Title"] = "Record Payment";
}

<div class="container">
    <h2 class="mb-4">Record New Payment</h2>

    <div class="card">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Payment.EnrollmentId" class="form-label"></label>
                    <select asp-for="Payment.EnrollmentId" class="form-select" asp-items="Model.EnrollmentList">
                        <option value="">-- Select Enrollment --</option>
                    </select>
                    <span asp-validation-for="Payment.EnrollmentId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Payment.Amount" class="form-label"></label>
                    <input asp-for="Payment.Amount" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Payment.Amount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Payment.PaymentDate" class="form-label"></label>
                    <input asp-for="Payment.PaymentDate" class="form-control" type="datetime-local" />
                    <span asp-validation-for="Payment.PaymentDate" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Payment.PaymentMethod" class="form-label"></label>
                        <select asp-for="Payment.PaymentMethod" class="form-select" asp-items="Html.GetEnumSelectList<EnrollmentSystem.Models.PaymentMethod>()">
                        </select>
                        <span asp-validation-for="Payment.PaymentMethod" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Payment.ReferenceNumber" class="form-label"></label>
                        <input asp-for="Payment.ReferenceNumber" class="form-control" />
                        <span asp-validation-for="Payment.ReferenceNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Payment.Remarks" class="form-label"></label>
                    <textarea asp-for="Payment.Remarks" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Payment.Remarks" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Record Payment</button>
                    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
