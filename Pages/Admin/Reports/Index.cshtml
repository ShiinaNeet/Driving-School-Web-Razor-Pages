@page
@model IndexModel
@{
    ViewData["Title"] = "System Reports & Analytics";
}

<h2>System Reports & Analytics</h2>
<p class="text-muted">Comprehensive overview of system performance and statistics</p>

<div class="row mb-4">
    <div class="col-md-12">
        <h4><i class="bi bi-bar-chart"></i> Overview Statistics</h4>
    </div>
</div>

<!-- User Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h6 class="card-title">Total Students</h6>
                <h2 class="mb-0">@Model.TotalStudents</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h6 class="card-title">Total Professors</h6>
                <h2 class="mb-0">@Model.TotalProfessors</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h6 class="card-title">Total Courses</h6>
                <h2 class="mb-0">@Model.TotalCourses</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h6 class="card-title">Total Subjects</h6>
                <h2 class="mb-0">@Model.TotalSubjects</h2>
            </div>
        </div>
    </div>
</div>

<!-- Enrollment Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card border-primary">
            <div class="card-body">
                <h6 class="card-title text-primary">Total Enrollments</h6>
                <h2 class="mb-0">@Model.TotalEnrollments</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body">
                <h6 class="card-title text-success">Active</h6>
                <h2 class="mb-0">@Model.ActiveEnrollments</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-warning">
            <div class="card-body">
                <h6 class="card-title text-warning">Pending</h6>
                <h2 class="mb-0">@Model.PendingEnrollments</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-info">
            <div class="card-body">
                <h6 class="card-title text-info">Completed</h6>
                <h2 class="mb-0">@Model.CompletedEnrollments</h2>
            </div>
        </div>
    </div>
</div>

<!-- Financial Statistics -->
<div class="row mb-4">
    <div class="col-md-12">
        <h4><i class="bi bi-currency-dollar"></i> Financial Overview</h4>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h6 class="card-title">Total Revenue</h6>
                <h2 class="mb-0">$@Model.TotalRevenue.ToString("N2")</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h6 class="card-title">Total Paid</h6>
                <h2 class="mb-0">$@Model.TotalPaid.ToString("N2")</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <h6 class="card-title">Outstanding</h6>
                <h2 class="mb-0">$@Model.TotalOutstanding.ToString("N2")</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <h6 class="card-title">Pending Payments</h6>
                <h2 class="mb-0">$@Model.PendingPayments.ToString("N2")</h2>
            </div>
        </div>
    </div>
</div>

<!-- Academic Statistics -->
<div class="row mb-4">
    <div class="col-md-12">
        <h4><i class="bi bi-book"></i> Academic Performance</h4>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-2">
        <div class="card border-info">
            <div class="card-body text-center">
                <h6 class="card-title">Schedules</h6>
                <h3 class="mb-0">@Model.TotalSchedules</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card border-success">
            <div class="card-body text-center">
                <h6 class="card-title">Upcoming</h6>
                <h3 class="mb-0">@Model.UpcomingSchedules</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card border-primary">
            <div class="card-body text-center">
                <h6 class="card-title">Completed</h6>
                <h3 class="mb-0">@Model.CompletedSchedules</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card border-warning">
            <div class="card-body text-center">
                <h6 class="card-title">Grades</h6>
                <h3 class="mb-0">@Model.TotalGradesRecorded</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card border-success">
            <div class="card-body text-center">
                <h6 class="card-title">Avg. Grade</h6>
                <h3 class="mb-0">@Model.AverageGrade.ToString("F1")%</h3>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card border-info">
            <div class="card-body text-center">
                <h6 class="card-title">Materials</h6>
                <h3 class="mb-0">@Model.TotalMaterials</h3>
            </div>
        </div>
    </div>
</div>

<!-- Top Courses -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-trophy"></i> Top 5 Courses by Enrollment</h5>
            </div>
            <div class="card-body">
                @if (Model.TopCourses.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Course</th>
                                    <th>Enrollments</th>
                                    <th>Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in Model.TopCourses)
                                {
                                    <tr>
                                        <td>
                                            <strong>@course.Course.Name</strong><br />
                                            <small class="text-muted">@course.Course.Code</small>
                                        </td>
                                        <td><span class="badge bg-primary">@course.EnrollmentCount</span></td>
                                        <td><span class="text-success fw-bold">$@course.Revenue.ToString("N2")</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No course data available.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-calendar-check"></i> Upcoming Classes (Next 10)</h5>
            </div>
            <div class="card-body">
                @if (Model.UpcomingClasses.Any())
                {
                    <div class="list-group list-group-flush" style="max-height: 400px; overflow-y: auto;">
                        @foreach (var schedule in Model.UpcomingClasses)
                        {
                            <div class="list-group-item px-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <div>
                                        <h6 class="mb-1">@schedule.Title</h6>
                                        <p class="mb-1 small">
                                            <strong>Course:</strong> @schedule.Course?.Name<br />
                                            <strong>Professor:</strong> @schedule.Professor?.User.FirstName @schedule.Professor?.User.LastName<br />
                                            <strong>Time:</strong> @schedule.StartTime.ToString("MMM dd, h:mm tt")
                                        </p>
                                        <span class="badge bg-info">@schedule.Type</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No upcoming classes scheduled.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-person-plus"></i> Recent Enrollments</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentEnrollments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Student</th>
                                    <th>Course</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var enrollment in Model.RecentEnrollments)
                                {
                                    <tr>
                                        <td>@enrollment.Student.FirstName @enrollment.Student.LastName</td>
                                        <td>@enrollment.Course.Name</td>
                                        <td>@enrollment.EnrollmentDate.ToString("MMM dd")</td>
                                        <td>
                                            <span class="badge bg-@(enrollment.Status == EnrollmentStatus.Active ? "success" : enrollment.Status == EnrollmentStatus.Pending ? "warning" : "secondary")">
                                                @enrollment.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No recent enrollments.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h5 class="mb-0"><i class="bi bi-credit-card"></i> Recent Payments</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentPayments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Student</th>
                                    <th>Amount</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.RecentPayments)
                                {
                                    <tr>
                                        <td>@payment.Student.FirstName @payment.Student.LastName</td>
                                        <td>$@payment.Amount.ToString("N2")</td>
                                        <td>@payment.PaymentDate.ToString("MMM dd")</td>
                                        <td>
                                            <span class="badge bg-@(payment.Status == PaymentStatus.Completed ? "success" : "warning")">
                                                @payment.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No recent payments.</p>
                }
            </div>
        </div>
    </div>
</div>
