@page
@model IndexModel
@{
    ViewData["Title"] = "Schedule Management";
}

<h2>Schedule Management</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Filter Schedules</h5>
        <a asp-page="./Create" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle"></i> Create New Schedule
        </a>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label for="filterCourseId" class="form-label">Course</label>
                <select id="filterCourseId" name="FilterCourseId" class="form-select" asp-for="FilterCourseId" asp-items="Model.CourseList">
                    <option value="">All Courses</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="filterProfessorId" class="form-label">Professor</label>
                <select id="filterProfessorId" name="FilterProfessorId" class="form-select" asp-for="FilterProfessorId" asp-items="Model.ProfessorList">
                    <option value="">All Professors</option>
                </select>
            </div>
            <div class="col-md-2">
                <label for="filterStatus" class="form-label">Status</label>
                <select id="filterStatus" name="FilterStatus" class="form-select" asp-for="FilterStatus">
                    <option value="">All Statuses</option>
                    <option value="Scheduled">Scheduled</option>
                    <option value="InProgress">In Progress</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                    <option value="Postponed">Postponed</option>
                </select>
            </div>
            <div class="col-md-2">
                <label for="filterDate" class="form-label">Date</label>
                <input type="date" id="filterDate" name="FilterDate" class="form-control" asp-for="FilterDate" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Filter</button>
                <a asp-page="./Index" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">All Schedules (@Model.Schedules.Count)</h5>
    </div>
    <div class="card-body">
        @if (Model.Schedules.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Course</th>
                            <th>Subject</th>
                            <th>Professor</th>
                            <th>Date & Time</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Location</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var schedule in Model.Schedules)
                        {
                            <tr>
                                <td>@schedule.Title</td>
                                <td>@schedule.Course?.Name</td>
                                <td>@schedule.Subject?.Name</td>
                                <td>
                                    @if (schedule.Professor != null)
                                    {
                                        <span>@schedule.Professor.User.FirstName @schedule.Professor.User.LastName</span>
                                    }
                                </td>
                                <td>
                                    @schedule.StartTime.ToString("MMM dd, yyyy")<br />
                                    <small class="text-muted">@schedule.StartTime.ToString("h:mm tt") - @schedule.EndTime.ToString("h:mm tt")</small>
                                </td>
                                <td><span class="badge bg-info">@schedule.Type</span></td>
                                <td>
                                    <span class="badge bg-@(schedule.Status == ScheduleStatus.Scheduled ? "success" : schedule.Status == ScheduleStatus.Completed ? "primary" : schedule.Status == ScheduleStatus.Cancelled ? "danger" : schedule.Status == ScheduleStatus.InProgress ? "warning" : "secondary")">
                                        @schedule.Status
                                    </span>
                                </td>
                                <td>@schedule.Location</td>
                                <td>
                                    <a asp-page="./Edit" asp-route-id="@schedule.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@schedule.Id" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this schedule?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <h5>No Schedules Found</h5>
                <p>No schedules match your filter criteria. Try adjusting the filters or create a new schedule.</p>
            </div>
        }
    </div>
</div>
