@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Subject";
}

<h2>Delete Subject</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this subject?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.Subject!.ImagePath))
        {
            <div class="mb-3 text-center">
                <img src="/@Model.Subject.ImagePath" alt="@Model.Subject.Name" class="img-fluid rounded" style="max-height: 200px;">
            </div>
        }

        <dl class="row">
            <dt class="col-sm-3">Code</dt>
            <dd class="col-sm-9">@Model.Subject.Code</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Subject.Name</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@(Model.Subject.Description ?? "No description")</dd>

            <dt class="col-sm-3">Credits</dt>
            <dd class="col-sm-9">@Model.Subject.Credits</dd>

            <dt class="col-sm-3">Professor</dt>
            <dd class="col-sm-9">
                @if (Model.Subject.Professor != null)
                {
                    <span>@Model.Subject.Professor.User.FirstName @Model.Subject.Professor.User.LastName</span>
                }
                else
                {
                    <span class="text-muted">Not assigned</span>
                }
            </dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.Subject.Status == SubjectStatus.Active)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </dd>
        </dl>

        @if (Model.CourseCount > 0)
        {
            <div class="alert alert-warning">
                <strong>Warning:</strong> This subject is used in @Model.CourseCount course(s). Deleting it will remove it from those courses.
            </div>
        }

        <form method="post">
            <input type="hidden" asp-for="Subject.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
