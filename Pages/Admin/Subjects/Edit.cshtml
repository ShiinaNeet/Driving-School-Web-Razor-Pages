@page "{id:int}"
@model EditModel
@{
    ViewData["Title"] = "Edit Subject";
}

<h2>Edit Subject</h2>

<hr />

<div class="row">
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Subject.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Subject.Code" class="form-label"></label>
                    <input asp-for="Subject.Code" class="form-control" />
                    <span asp-validation-for="Subject.Code" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Subject.Credits" class="form-label"></label>
                    <input asp-for="Subject.Credits" class="form-control" type="number" min="1" max="10" />
                    <span asp-validation-for="Subject.Credits" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Subject.Name" class="form-label"></label>
                <input asp-for="Subject.Name" class="form-control" />
                <span asp-validation-for="Subject.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Subject.Description" class="form-label"></label>
                <textarea asp-for="Subject.Description" class="form-control" rows="4"></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Subject.ProfessorId" class="form-label">Assign Professor</label>
                    <select asp-for="Subject.ProfessorId" class="form-select" asp-items="Model.ProfessorList">
                        <option value="">-- Not assigned --</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Subject.Status" class="form-label"></label>
                    <select asp-for="Subject.Status" class="form-select" asp-items="Html.GetEnumSelectList<SubjectStatus>()"></select>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label">Subject Image</label>
                <input asp-for="ImageFile" class="form-control" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
                <small class="form-text text-muted">Max size: 5MB. Formats: JPG, PNG, GIF</small>
            </div>

            @if (!string.IsNullOrEmpty(Model.Subject.ImagePath))
            {
                <div class="mb-3">
                    <label class="form-label">Current Image:</label><br />
                    <img src="/@Model.Subject.ImagePath" alt="Subject Image" style="max-width: 300px; max-height: 200px;" class="img-thumbnail" />
                </div>
            }

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
