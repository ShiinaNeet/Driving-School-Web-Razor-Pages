@page
@model IndexModel
@{
    ViewData["Title"] = "Subjects";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Subjects</h2>
    <a asp-page="./Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Subject
    </a>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Credits</th>
                        <th>Professor</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var subject in Model.Subjects)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(subject.ImagePath))
                                {
                                    <img src="/@subject.ImagePath" alt="@subject.Name" class="me-2" style="width: 30px; height: 30px; object-fit: cover; border-radius: 4px;">
                                }
                                <strong>@subject.Code</strong>
                            </td>
                            <td>@subject.Name</td>
                            <td>@subject.Credits</td>
                            <td>
                                @if (subject.Professor != null)
                                {
                                    <span>@subject.Professor.User.FirstName @subject.Professor.User.LastName</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not assigned</span>
                                }
                            </td>
                            <td>
                                @if (subject.Status == SubjectStatus.Active)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-page="./Details" asp-route-id="@subject.Id" class="btn btn-info" title="Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-page="./Edit" asp-route-id="@subject.Id" class="btn btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@subject.Id" class="btn btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Subjects.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-2">No subjects found. Click "Add New Subject" to get started.</p>
                </div>
            }
        </div>
    </div>
</div>
