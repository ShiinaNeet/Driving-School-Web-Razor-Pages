@page
@model EnrollmentSystem.Pages.Admin.VehicleMaintenance.CreateModel
@{
    ViewData["Title"] = "Schedule Maintenance";
}

<h2><i class="bi bi-plus-circle me-2"></i>Schedule Maintenance</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="VehicleMaintenance.VehicleId" class="form-label">Vehicle</label>
                        <select asp-for="VehicleMaintenance.VehicleId" class="form-select" asp-items="Model.Vehicles">
                            <option value="">-- Select Vehicle --</option>
                        </select>
                        <span asp-validation-for="VehicleMaintenance.VehicleId" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="VehicleMaintenance.Type" class="form-label"></label>
                            <select asp-for="VehicleMaintenance.Type" class="form-select" asp-items="Html.GetEnumSelectList<EnrollmentSystem.Models.MaintenanceType>()"></select>
                            <span asp-validation-for="VehicleMaintenance.Type" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="VehicleMaintenance.Status" class="form-label"></label>
                            <select asp-for="VehicleMaintenance.Status" class="form-select" asp-items="Html.GetEnumSelectList<EnrollmentSystem.Models.MaintenanceStatus>()"></select>
                            <span asp-validation-for="VehicleMaintenance.Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="VehicleMaintenance.Description" class="form-label"></label>
                        <textarea asp-for="VehicleMaintenance.Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="VehicleMaintenance.Description" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="VehicleMaintenance.ScheduledDate" class="form-label"></label>
                            <input asp-for="VehicleMaintenance.ScheduledDate" class="form-control" type="date" />
                            <span asp-validation-for="VehicleMaintenance.ScheduledDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="VehicleMaintenance.CompletedDate" class="form-label"></label>
                            <input asp-for="VehicleMaintenance.CompletedDate" class="form-control" type="date" />
                            <span asp-validation-for="VehicleMaintenance.CompletedDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="VehicleMaintenance.Cost" class="form-label"></label>
                            <input asp-for="VehicleMaintenance.Cost" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="VehicleMaintenance.Cost" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="VehicleMaintenance.MileageAtService" class="form-label"></label>
                            <input asp-for="VehicleMaintenance.MileageAtService" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="VehicleMaintenance.MileageAtService" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="VehicleMaintenance.InvoiceNumber" class="form-label"></label>
                            <input asp-for="VehicleMaintenance.InvoiceNumber" class="form-control" />
                            <span asp-validation-for="VehicleMaintenance.InvoiceNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="VehicleMaintenance.ServiceProvider" class="form-label"></label>
                        <input asp-for="VehicleMaintenance.ServiceProvider" class="form-control" />
                        <span asp-validation-for="VehicleMaintenance.ServiceProvider" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="VehicleMaintenance.PartsReplaced" class="form-label"></label>
                        <textarea asp-for="VehicleMaintenance.PartsReplaced" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="VehicleMaintenance.PartsReplaced" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="VehicleMaintenance.Notes" class="form-label"></label>
                        <textarea asp-for="VehicleMaintenance.Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="VehicleMaintenance.Notes" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
