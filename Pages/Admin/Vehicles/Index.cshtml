@page
@model EnrollmentSystem.Pages.Admin.Vehicles.IndexModel
@{
    ViewData["Title"] = "Vehicle Fleet Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-car-front-fill me-2"></i>Vehicle Fleet Management</h2>
    <a asp-page="./Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Add New Vehicle
    </a>
</div>

@if (!Model.Vehicles.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>No vehicles registered yet. Click "Add New Vehicle" to get started.
    </div>
}
else
{
    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Total Vehicles</h6>
                    <h3 class="card-title">@Model.Vehicles.Count</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Available</h6>
                    <h3 class="card-title text-success">@Model.Vehicles.Count(v => v.Status == EnrollmentSystem.Models.VehicleStatus.Available)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">In Use</h6>
                    <h3 class="card-title text-warning">@Model.Vehicles.Count(v => v.Status == EnrollmentSystem.Models.VehicleStatus.InUse)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Maintenance</h6>
                    <h3 class="card-title text-danger">@Model.Vehicles.Count(v => v.Status == EnrollmentSystem.Models.VehicleStatus.Maintenance)</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Vehicles Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Vehicle</th>
                            <th>License Plate</th>
                            <th>Type</th>
                            <th>Transmission</th>
                            <th>Mileage</th>
                            <th>Status</th>
                            <th>Location</th>
                            <th>Scheduled Uses</th>
                            <th>Next Maintenance</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vehicle in Model.Vehicles)
                        {
                            <tr>
                                <td>
                                    <strong>@vehicle.Year @vehicle.Make @vehicle.Model</strong>
                                    @if (!string.IsNullOrEmpty(vehicle.Color))
                                    {
                                        <br /><small class="text-muted">@vehicle.Color</small>
                                    }
                                </td>
                                <td><span class="badge bg-secondary">@vehicle.LicensePlate</span></td>
                                <td>@vehicle.Type</td>
                                <td>@vehicle.Transmission</td>
                                <td>@vehicle.CurrentMileage.ToString("N0") mi</td>
                                <td>
                                    @switch (vehicle.Status)
                                    {
                                        case EnrollmentSystem.Models.VehicleStatus.Available:
                                            <span class="badge bg-success">Available</span>
                                            break;
                                        case EnrollmentSystem.Models.VehicleStatus.InUse:
                                            <span class="badge bg-warning text-dark">In Use</span>
                                            break;
                                        case EnrollmentSystem.Models.VehicleStatus.Maintenance:
                                            <span class="badge bg-danger">Maintenance</span>
                                            break;
                                        case EnrollmentSystem.Models.VehicleStatus.OutOfService:
                                            <span class="badge bg-dark">Out of Service</span>
                                            break;
                                        case EnrollmentSystem.Models.VehicleStatus.Retired:
                                            <span class="badge bg-secondary">Retired</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (vehicle.Location != null)
                                    {
                                        <text>@vehicle.Location.Name</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not assigned</span>
                                    }
                                </td>
                                <td>
                                    @if (Model.VehicleScheduleCounts.ContainsKey(vehicle.Id))
                                    {
                                        <span class="badge bg-info text-dark">@Model.VehicleScheduleCounts[vehicle.Id] schedules</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">None</span>
                                    }
                                </td>
                                <td>
                                    @if (Model.UpcomingMaintenance.ContainsKey(vehicle.Id) && Model.UpcomingMaintenance[vehicle.Id] != null)
                                    {
                                        var maintenance = Model.UpcomingMaintenance[vehicle.Id]!;
                                        <small>@maintenance.ScheduledDate.ToString("MMM dd, yyyy")</small>
                                        <br /><small class="text-muted">@maintenance.Type</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">None scheduled</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-page="./Details" asp-route-id="@vehicle.Id" class="btn btn-outline-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-page="./Edit" asp-route-id="@vehicle.Id" class="btn btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@vehicle.Id" class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<div class="mt-3">
    <a asp-page="../Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Admin Dashboard
    </a>
</div>
