@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Driving School Enrollment System</h1>
    <p class="lead">Manage your driving school enrollments, courses, and student information efficiently.</p>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="mt-5">
            <h3>Quick Links</h3>
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-page="/Admin/Index" class="btn btn-primary btn-lg">Go to Admin Dashboard</a>
                }
                else if (User.IsInRole("Student"))
                {
                    <a asp-page="/Student/Index" class="btn btn-primary btn-lg">Go to Student Dashboard</a>
                }
                else if (User.IsInRole("Guardian"))
                {
                    <a asp-page="/Guardian/Index" class="btn btn-primary btn-lg">Go to Guardian Dashboard</a>
                }
                else if (User.IsInRole("Librarian"))
                {
                    <a asp-page="/Librarian/Index" class="btn btn-primary btn-lg">Go to Librarian Dashboard</a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="mt-5">
            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                <a asp-page="/Account/Login" class="btn btn-primary btn-lg">Login</a>
                <a asp-page="/Account/Register" class="btn btn-outline-primary btn-lg">Register</a>
            </div>
        </div>

        <div class="mt-5">
            <div class="row">
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Admin Portal</h5>
                            <p class="card-text">Manage courses, professors, students, and enrollments.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Student Portal</h5>
                            <p class="card-text">View your courses, payments, and academic progress.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Guardian Portal</h5>
                            <p class="card-text">Monitor your student's enrollments and payments.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Librarian Portal</h5>
                            <p class="card-text">Manage library books and borrowing records.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
