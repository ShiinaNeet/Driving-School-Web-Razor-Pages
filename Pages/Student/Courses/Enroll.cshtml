@page "{id:int}"
@model EnrollModel
@{
    ViewData["Title"] = "Enroll in " + Model.Course.Name;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="./Index">Courses</a></li>
        <li class="breadcrumb-item"><a asp-page="./Details" asp-route-id="@Model.Course.Id">@Model.Course.Name</a></li>
        <li class="breadcrumb-item active">Enroll</li>
    </ol>
</nav>

<h2>Enroll in @Model.Course.Name</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Student Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Name:</strong> @Model.CurrentUser.FirstName @Model.CurrentUser.LastName</p>
                        <p><strong>Email:</strong> @Model.CurrentUser.Email</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Phone:</strong> @Model.CurrentUser.PhoneNumber</p>
                        <p><strong>Date of Birth:</strong> @Model.CurrentUser.DateOfBirth?.ToString("MMM dd, yyyy")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Course Information</h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Course.ImagePath))
                {
                    <img src="/@Model.Course.ImagePath" alt="@Model.Course.Name" class="img-fluid mb-3" style="max-height: 200px;" />
                }
                <h5>@Model.Course.Name</h5>
                <p>@Model.Course.Description</p>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Duration:</strong> @Model.Course.DurationWeeks weeks</p>
                        <p><strong>Subjects:</strong> @Model.Course.CourseSubjects.Count</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Total Fee:</strong> <span class="h5 text-primary">$@Model.Course.TotalFee.ToString("N2")</span></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Enrollment Details</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="InitialPayment" class="form-label">Initial Payment (Optional)</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="InitialPayment" class="form-control" type="number" step="0.01" min="0" max="@Model.Course.TotalFee" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="InitialPayment" class="text-danger"></span>
                        <div class="form-text">
                            You can pay the full amount ($@Model.Course.TotalFee.ToString("N2")) now or make an initial payment.
                            The remaining balance can be paid later. Leave at $0 to pay later.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Additional Notes (Optional)</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Any special requests or information..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="alert alert-info">
                        <h6><i class="bi bi-info-circle"></i> Important Information</h6>
                        <ul class="mb-0">
                            <li>Your enrollment request will be reviewed by our admissions team</li>
                            <li>You will receive a notification once your enrollment is approved</li>
                            <li>Payment can be made in full or in installments</li>
                            <li>You must complete all required subjects to receive certification</li>
                        </ul>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="agreeTerms" required />
                        <label class="form-check-label" for="agreeTerms">
                            I agree to the terms and conditions of enrollment and understand the course requirements
                        </label>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle"></i> Submit Enrollment Request
                        </button>
                        <a asp-page="./Details" asp-route-id="@Model.Course.Id" class="btn btn-secondary btn-lg">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-3 border-success">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0">Enrollment Summary</h6>
            </div>
            <div class="card-body">
                <p><strong>Course:</strong><br />@Model.Course.Name</p>
                <p><strong>Total Fee:</strong><br /><span class="h5">$@Model.Course.TotalFee.ToString("N2")</span></p>
                <hr />
                <p class="small mb-0">
                    After submitting this enrollment request:
                </p>
                <ul class="small">
                    <li>Request will be pending approval</li>
                    <li>You'll receive a notification</li>
                    <li>Admin will review your request</li>
                    <li>You can track status in your dashboard</li>
                </ul>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Course Subjects</h6>
            </div>
            <div class="card-body">
                @if (Model.Course.CourseSubjects.Any())
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var cs in Model.Course.CourseSubjects.OrderBy(cs => cs.Order))
                        {
                            <li class="mb-2">
                                <i class="bi bi-@(cs.IsRequired ? "check-circle-fill text-danger" : "circle text-secondary")"></i>
                                @cs.Subject.Name
                                <br />
                                <small class="text-muted">@cs.Subject.Credits credits</small>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
