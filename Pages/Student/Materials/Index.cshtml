@page
@model IndexModel
@{
    ViewData["Title"] = "Course Materials";
}

<h2>Course Materials</h2>
<p class="text-muted">Access learning materials for your enrolled courses</p>

@if (Model.CourseMaterials.Any())
{
    @foreach (var courseWithMaterials in Model.CourseMaterials)
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-mortarboard"></i> @courseWithMaterials.Course.Name
                </h5>
            </div>
            <div class="card-body">
                @if (courseWithMaterials.Materials.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Subject</th>
                                    <th>File Name</th>
                                    <th>Type</th>
                                    <th>Uploaded</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var material in courseWithMaterials.Materials)
                                {
                                    <tr>
                                        <td>
                                            <strong>@material.Subject.Code</strong><br />
                                            <small class="text-muted">@material.Subject.Name</small>
                                        </td>
                                        <td>@material.FileName</td>
                                        <td>
                                            <span class="badge bg-@(material.Type == MaterialType.Syllabus ? "primary" : material.Type == MaterialType.Lecture ? "info" : material.Type == MaterialType.Assignment ? "warning" : material.Type == MaterialType.Video ? "success" : "secondary")">
                                                @material.Type
                                            </span>
                                        </td>
                                        <td>@material.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <a href="/@material.FilePath" target="_blank" class="btn btn-sm btn-primary" download>
                                                <i class="bi bi-download"></i> Download
                                            </a>
                                            <a href="/@material.FilePath" target="_blank" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> No materials available for this course yet.
                    </div>
                }
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-warning">
        <h5><i class="bi bi-exclamation-triangle"></i> No Enrolled Courses</h5>
        <p>You need to be enrolled in courses to access materials.</p>
        <a asp-page="/Student/Courses/Index" class="btn btn-primary">Browse Courses</a>
    </div>
}
